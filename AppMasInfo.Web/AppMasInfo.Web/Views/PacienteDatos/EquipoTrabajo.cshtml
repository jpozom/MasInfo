@model AppMasInfo.Web.Models.SeleccionPacienteDetailViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

<div class="panel panel-primary">
    <div class="panel-body" id="panel">
        <div style="font-size: 18px;">
            Bienvenido &nbsp;<strong>@Model.DetalleTutor.Nombre &nbsp; @Model.DetalleTutor.ApellidoPaterno &nbsp; @Model.DetalleTutor.ApellidoMaterno </strong>
        </div>

        <br />

        <div class="row">
            <div class="col-lg-12">
                <div class="panel-group" id="accordion-test-2">
                    <div class="panel panel-info panel-color">
                        <div class="panel-heading" style="background:#3292e0;">
                            <h4 class="panel-title">
                                <a data-toggle="collapse" data-parent="#accordion-test-2" href="#collapseOne-2" aria-expanded="false" class="collapsed">
                                    <i class="glyphicon glyphicon-info-sign">&nbsp;</i>Datos Paciente
                                </a>
                            </h4>
                        </div>
                        <div id="collapseOne-2" class="panel-collapse collapse">
                            <div class="panel-body">
                                <fieldset>
                                    <div class="list-group">
                                        <a href="#" class="list-group-item col-md-10" style="border:none !important;">
                                            <span>
                                                Nombre: &nbsp;  @Model.NombrePaciente &nbsp; @Model.ApellidoPaternoPaciente &nbsp; @Model.ApellidoMaternoPaciente&nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;
                                                Rut: &nbsp;@Model.RutPaciente
                                            </span>
                                        </a>
                                    </div>
                                </fieldset>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="panel-group" id="accordion-test-2">
                    <div class="panel panel-info panel-color">
                        <div class="panel-heading" style="background:#3292e0;">
                            <h4 class="panel-title">
                                <a data-toggle="collapse" data-parent="#accordion-test-2" href="#collapseTwo-2" aria-expanded="false" class="collapsed">
                                    <i class="glyphicon glyphicon-plus-sign">&nbsp;</i>Lista Equipo Clínico                                   
                                </a>
                            </h4>
                        </div>
                        <div id="collapseTwo-2" class="panel-collapse collapse in">
                            <div class="panel-body">
                                <fieldset>
                                    <table id="" class="table table-hover" role="grid" aria-describedby="datatable_info">
                                        <thead>
                                            <tr>
                                                <th><h6 align="left">Nombres Equipo Cl&iacute;nico</h6></th>
                                                <th><h6 align="left">Cargo</h6></th>
                                                <th><h6 align="left">Especialidad</h6></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @if (Model.Equipo.Count() > 0)
                                            {
                                                foreach (var item in Model.Equipo)
                                                {
                                                    <tr>
                                                        <td>@item.Trabajador.Nombre &nbsp;  @item.Trabajador.ApellidoPaterno&nbsp;  @item.Trabajador.ApellidoMaterno</td>
                                                        <td>@item.Trabajador.DetalleFuncion.Descripcion</td>
                                                        <td>@item.Trabajador.DetalleCargo.Descripcion</td>
                                                    </tr>
                                                }
                                            }
                                            else
                                            {
                                                <tr><td colspan="8">No existen datos</td></tr>
                                            }
                                        </tbody>
                                    </table>
                                </fieldset>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <br />

            <div class="form-group col-sm-12">
                <div class="col-md-12 text-left">
                    <a href='@Url.Action("Index", "PacienteDatos")' class="btn btn-default" role="button" aria-pressed="true">
                        Volver
                    </a>
                </div>
            </div>

        </div>
    </div>
